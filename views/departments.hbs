<div class="row">
    <div class="col-md-12">
        <h2>Departments
            <a href="/departments/add" class="btn btn-info pull-right">Add New Department</a>
        </h2>
        <hr />

        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Department&nbsp;Number</th>
                        <th>Department&nbsp;Name</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                {{#each departments}}
                    <tr>
                        <td><a href="/department/{{departmentId}}">{{departmentId}}</a></td>
                        <td><a href="/employees?department={{departmentId}}">{{departmentName}}</a></td>
                        <td><a href="/departments/delete/{{departmentId}}" class="btn btn-danger pull-right">Remove</a></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless departments}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>